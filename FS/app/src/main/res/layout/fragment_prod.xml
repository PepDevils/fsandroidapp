<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="48dp"
    android:background="@android:color/white"
    tools:context="pt.dezvezesdez.farmaciaserrano.fragments.ProdFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/iv_frame_produto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"

            android:padding="8dp">

           <!-- android:background="@drawable/simple_border"-->

            <ImageView
                android:id="@+id/iv_produto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

        </FrameLayout>

        <TextView
            android:id="@+id/tv_titulo_produto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Titulo"
            android:textSize="16sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_price_produto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="4dp"
                android:gravity="center"
                android:text="Preço"
                android:textSize="14sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/tv_price_sales_produto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="4dp"
                android:gravity="center"
                android:text="Preço"
                android:textSize="14sp"
                android:textStyle="bold|italic" />

        </LinearLayout>


        <TextView
            android:id="@+id/tv_ref_produto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Ref:5648648456845"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_stock_produto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:gravity="center"
            android:text="EM STOCK"
            android:textSize="12sp"
            android:textStyle="italic|bold" />

        <TextView
            android:id="@+id/label_client"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:text=""
            android:textColor="@color/fs_verde"
            android:textSize="10sp"
            android:textStyle="italic" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/quant"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/simple_border"
                android:gravity="center"
                android:hint="Quant."
                android:inputType="number"
                android:textColor="@android:color/darker_gray" />


            <Button
                android:id="@+id/add"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:background="@drawable/selector_add_button"
                android:gravity="center"
                android:text="ADICIONAR"
                android:textColor="@android:color/white" />

        </LinearLayout>

        <TextView
            android:id="@+id/desc_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="DESCRIÇÃO DO PRODUTO"
            android:textSize="15sp"
            android:textStyle="bold" />

        <com.uncopt.android.widget.text.justify.JustifiedTextView
            android:id="@+id/desc_produto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/info_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="INFORMAÇÃO ADICIONAL"
            android:textSize="15sp"
            android:textStyle="bold" />

        <com.uncopt.android.widget.text.justify.JustifiedTextView
            android:id="@+id/info_produto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="48dp"
            android:gravity="center"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp" />


    </LinearLayout>

</ScrollView>
