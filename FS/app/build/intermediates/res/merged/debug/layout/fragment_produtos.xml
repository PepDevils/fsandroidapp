<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="horizontal">

    <!--120dp-->

    <ImageView
        android:id="@+id/prod_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/prod_border"
        android:scaleType="fitCenter" />

  <!--  android:background="@drawable/prod_border"-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tx_nome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:ellipsize="end"
            android:lines="2"
            android:paddingTop="8dp"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textColor="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tx_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/text_margin"
                android:layout_weight="1"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textColor="@android:color/darker_gray" />


            <TextView
                android:id="@+id/tx_price_promotion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/text_margin"
                android:layout_weight="1"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textColor="@android:color/darker_gray"
                android:textStyle="bold" />

        </LinearLayout>


        <Button
            android:id="@+id/img_prod_compra"
            android:layout_width="95dp"
            android:layout_height="30dp"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="16dp"
            android:background="@drawable/selector_add_button"
            android:text="Adicionar"
            android:textColor="@android:color/white"
            android:textSize="@dimen/txt_bt" />

    </LinearLayout>


</LinearLayout>
